# Syst√®me
alias updatedb="sudo /usr/libexec/locate.updatedb"
alias "alias-reload"='. ~/.alias'
alias "rm-eclipse-files"='find . \( -name ".DS_Store" -or -name ".classpath" -or -name ".project" -or -name ".scala_dependencies" -or -name ".settings" -or -name ".cache" \) | xargs rm -r '

# Postgresql
#alias "pg-log"="tail -f /usr/local/var/postgres/pg_log/$(ls -t /usr/local/var/postgres/pg_log/ | cut -f1 | head -n 1)"
alias "pg-start"="sudo -u postgres pg_ctl -D /Library/PostgreSQL/8.4/data -l /var/log/pg/logfile start"
alias "pg-stop"="sudo -u postgres pg_ctl -D /Library/PostgreSQL/8.4/data stop"

# Mysql
alias "mysql-start"="mysql.server start"
alias "mysql-stop"="mysql.server stop"

# Play
alias "play21"="~/Travail/outils/play20-master/play"
